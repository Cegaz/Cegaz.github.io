<!DOCTYPE html>
<html>
<head>
    {% block head %}
    <meta charset="UTF-8" />
    {% block title %}<title>My english class</title>{% endblock %}
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('build/app.css') }}" />
        <link href="https://fonts.googleapis.com/css?family=Pangolin|Open+Sans" rel="stylesheet">
        <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    {% endblock stylesheets %}
    {% endblock head %}
</head>

<body>
    <div class="body">
        {% block body %}
        {% block authentification %}
            <div class="col-md-offset-3 col-md-6 col-xs-offset-1 col-xs-10 authentification">
                {% block fos_user_content %}{% endblock %}
                {% block content %}{% endblock %}
            </div>
        {% endblock authentification %}
        {% endblock body %}
    </div>
</body>
</html>

{% block javascripts %}
    <script src="{{ asset('build/app.js') }}"></script>
