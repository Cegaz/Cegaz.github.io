<!-- Modale showStudent-->
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">{{ student.surname|capitalize }} {{ student.name|upper }}</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body container">
            <div class="row">
                <div class="col">
                    <p class="text-left">class {{ student.class.classLetter }} -
                        island {% if student.island is not null %}{{ student.island.label }}{% endif %}</p>
                </div>
                <div class="col">
                    <p class="text-right">20/20</p>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    {#{{ student.nbInterventions }} PARTICIPATION{% if student.nbInterventions > 1 %}S{% endif %}#}
                </div>
            </div>

            <div class="row" id="comments">
                <div class="col">
                    <div id="comments-list">
                        <p>COMMENTS</p>
                        {% for comment in student.comments %}
                            <p contenteditable="true">
                                {{ comment.text }}<br>
                                <span class="font-italic">{{ comment.creationDate|date('d/m/Y') }}</span>
                                <img id="comment-modif" src="/assets/images/crayon.png">
                            </p>
                        {% endfor %}
                    </div>

                    <div id="comment-form">
                        <input type="text" name="text" id="input-text" placeholder="enter comment here">
                        <input type="hidden" id="input-id" value="{{ student.id }}">
                        <button class="btn btn-success" id="comment-save">ok</button>
                    </div>
                    <button class="btn btn-success" id="add-comment">add a comment</button>
                </div>
            </div>

        </div>
        <div class="modal-footer">
        </div>

    </div>
</div>

