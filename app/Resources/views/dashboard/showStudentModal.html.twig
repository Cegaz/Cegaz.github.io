<!-- Modale showStudent-->
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="showStudent">{{ student.surname|capitalize }} {{ student.name|upper }}</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body container">
            <div class="row">
                <div class="col">
                    <div class="text-left">class {{ student.class.label }} -
                        island {% if student.island is not null %}{{ student.island.label }}{% endif %}</div>
                </div>
            </div>

            <hr>

            <div class="row">
                <div class="col">
                    <div>
                        {{ nbParticipations }} PARTICIPATION{% if nbParticipations > 1 %}S{% endif %}
                    </div>
                </div>
                <div class="col">
                    <div class="text-right">{{ student.gradeT1 }} / {{ student.gradeT2 }} / {{ student.gradeT3 }}</div>
                </div>
            </div>

            <hr>

            <div class="row" id="skill-row">
                <div class="col-12">
                    SKILLS
                </div>
                <div class="col-12">
                    {% for skill in student.skills %}
                        <button class="btn">
                            {{ skill.skill.label }}
                            <strong class="bold">{{ skill.grade }}</strong>
                        </button>
                    {% endfor %}
                </div>
            </div>

            <hr>

            <div class="row" id="comments">
                <div class="col">
                    <div id="comments-list">
                        <div id="comments-title">
                            <p>COMMENTS</p>
                            {% if student.comments|length > 3 %}
                                <div id="more-comments">
                                    <img src="/assets/images/arrow-down.png" alt="+ de commentaires">
                                </div>
                            {% endif %}
                        </div>

                        {% for comment in student.comments|slice(0,3) %}
                            <p contenteditable="true">
                                {{ comment.text }}<br>
                                <span class="font-italic">{{ comment.creationDate|date('d/m/Y') }}</span>
                            </p>
                        {% endfor %}

                        {% for comment in student.comments|slice(3, student.comments|length - 3) %}
                            <p contenteditable="true" class="hidden-comment">
                                {{ comment.text }}<br>
                                <span class="font-italic">{{ comment.creationDate|date('d/m/Y') }}</span>
                            </p>
                        {% endfor %}

                    </div>

                    <div id="comment-form">
                        <input type="text" name="text" id="input-text" placeholder="enter comment here">
                        <input type="hidden" id="input-id" value="{{ student.id }}">
                        <button class="btn btn-success" id="save-comment">save</button>
                        <button class="btn btn-danger" id="cancel-comment">cancel</button>
                    </div>
                    {#<button class="btn btn-success" id="add-comment">add a comment</button>#}
                    <img src="/assets/images/plus.png" id="add-comment">
                </div>
            </div>
        </div>

        <div class="modal-footer">
            <p>CONTACT<img src="/assets/images/pencil.png" id="modify-contact"></p>
            <div id="block-email">
            {% if student.email is not null %}
                <em id="student-email">{{ student.email }}</em>
            {% else %}
                <span id="student-email">pas d'email enregistré</span>
            {% endif %}
                <a href="mailto:{{ student.email }}"><img id="send-email" src="/assets/images/envelope.png" alt="send-email"/></a>
            </div>
            <br>
            {% if student.phoneNumber is not null %}
                <em id="student-phone">{{ student.phoneNumber }}</em>
            {% else %}
                <span id="student-phone">pas de numéro de tél enregistré</span><br>
            {% endif %}

            <div>
                <button class="btn btn-secondary" id="cancel-contact">cancel</button>
                <button class="btn btn-success" id="save-contact" data-id="{{ student.id }}">save</button>
            </div>

            {#<div>#}
            {#<img src="/assets/images/bin.png" id="delete-student" data-id="{{ student.id }}">#}
            {#</div>#}
        </div>
    </div>
</div>

