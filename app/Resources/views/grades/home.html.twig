{% extends 'base.html.twig' %}

{% block body %}
    <body class="grades">
    <div id="app-grades" class="row">
        <div id="skills" class="col-12 col-md">
            <h1>SKILLS</h1>
            <div id="skills-list">
                {% for skill in skills %}
                    <button class="btn class-btn" data-skillid="{{ skill.id }}">
                        {{ skill.label | capitalize}}
                    </button>
                {% endfor %}
            </div>
            <div>
                <img src="/assets/images/plus.png" class="icon" id="add-skill">
            </div>
            <div id="skill-form">
                <input type="text" name="text" id="input-text" placeholder="enter skill here">
                <button class="btn btn-success" id="save-skill">save</button>
                <button class="btn btn-danger" id="cancel-skill">cancel</button>
            </div>
        </div>
        <div id="grades" class="col-12 col-md text-center">
            <h1>GRADES</h1>
            <a href="/grades/class">
                <button class="btn class-btn">
                    SEE MY CLASS
                </button>
            </a>
        </div>
    </div>
    </body>
{% endblock %}