<!-- Modale add sanction-->
<div class="modal" id="sanctionModal" tabindex="-1" role="dialog" aria-labelledby="doc" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
            </div>
            <div class="modal-body">
                {{  form_start(form) }}

                <div class="form-group">
                    {{ form_widget(form.reason) }}
                    {{ form_errors(form.reason) }}
                </div>

                <div class="form-group">
                    {{ form_widget(form.details) }}
                    {{ form_errors(form.details) }}
                </div>
                <div>
                    {{ form_widget(form.student) }}
                </div>

                <div class="form-group">
                    <img src="{{ asset('assets/images/bell.png') }}" alt="reminder"> {{ form_label(form.done) }} {{ form_widget(form.done) }}
                    {{ form_errors(form.done) }}
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                {{ form_row(form.submit) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>