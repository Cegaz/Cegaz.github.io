{% extends 'base.html.twig' %}

{% block class %}
    {% if (app.user.classId is not defined or app.user.classId is empty) %}
        <div class="form-inline my-2 my-lg-0 ui-select">
            <select name="classes" class="form-control mr-sm-2">
                {% for class in classes %}
                    <option value="{{ class.id }}"
                            {% if (app.session.get('classId') == class.id) %} selected {% endif %}
                    >Class {{ class.label }}</option>
                {% endfor %}
            </select>
        </div>
    {% endif %}
{% endblock class %}

{% block body %}
    <div class="participation">
        <header>
            <img src="{{ asset('assets/images/rewind.png') }}" alt="cancel" class="icon" id="cancel">
        </header>

        <section>
            <div class="table-responsive">
                <table id="students-list" class="table table-striped">
                    <tr>
                        <th>
                            NAME
                            <a href="/participation/sort-by-name">
                                <img src="{{ asset('assets/images/sorting.png') }}" alt="sorting">
                            </a>
                        </th>
                        <th>
                            SURNAME
                            <a href="/participation/sort-by-surname">
                                <img src="{{ asset('assets/images/sorting.png') }}" alt="sorting">
                            </a>
                        </th>
                        <th>
                            LAST
                            <a href="/participation/sort-by-last-participation">
                                <img src="{{ asset('assets/images/sorting.png') }}" alt="sorting">
                            </a>
                        </th>
                        <th>
                            NB
                            <a href="/participation/sort-by-nb-participations">
                                <img src="{{ asset('assets/images/sorting.png') }}" alt="sorting">
                            </a>
                        </th>
                    </tr>

                    {% for student in students %}
                        <tr>
                            <td class="name">{{ student.name | upper }}</td>
                            <td class="surname">{{ student.surname | capitalize }}</td>
                            <td class="lastParticipation">{{ student.lastParticipation }}</td>
                            <td class="participations">{{ student.participations|length }}</td>
                            <td class="hand-up right-columns" data-id="{{ student.id }}">
                                <img src="{{ asset('assets/images/hand-up.png') }}" alt="participate" class="icon">
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </section>
    </div>
{% endblock %}
