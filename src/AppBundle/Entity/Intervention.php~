<?php

namespace AppBundle\Entity;

use Doctrine\ORM\Mapping as ORM;

/**
 * Intervention
 *
 * @ORM\Table(name="intervention")
 * @ORM\Entity
 */
class Intervention
{
    /**
     * @var \DateTime
     *
     * @ORM\Column(name="intervention_date", type="datetime", nullable=false)
     */
    private $interventionDate = 'CURRENT_TIMESTAMP';

    /**
     * @var integer
     *
     * @ORM\ManyToOne(targetEntity="Students", inversedBy="interventions")
     */
    private $student;

    /**
     * @var integer
     *
     * @ORM\Column(name="id", type="integer")
     * @ORM\Id
     * @ORM\GeneratedValue(strategy="IDENTITY")
     */
    private $id;



    /**
     * Set intervention
     *
     * @param \DateTime $intervention
     *
     * @return Intervention
     */
    public function setIntervention($intervention)
    {
        $this->intervention = $intervention;

        return $this;
    }

    /**
     * Get intervention
     *
     * @return \DateTime
     */
    public function getIntervention()
    {
        return $this->intervention;
    }


    /**
     * Get id
     *
     * @return integer
     */
    public function getId()
    {
        return $this->id;
    }
}
